<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/CSS/Shared.css" rel="stylesheet" />
    <link href="~/Content/CSS/ProjectsLayout.css" rel="stylesheet" />
</head>
<body>
    <header>
        <a class="homelink" href="/Home/Index">
            <img class="logo" src="~/Content/Images/Icons/logo.png" />
        </a>
        <ul class="headernav">
            <li class="headernav-item">
                <a class="navlink" href="#">
                    <img class="navicon" src="~/Content/Images/Icons/maps.svg" />
                    Maps
                </a>
            </li>
            <li class="headernav-item">
                <a class="navlink" href="#">
                    <img class="navicon" src="~/Content/Images/Icons/coding.svg" />
                    Coding
                </a>
            </li>
            <li class="headernav-item">
                <a class="navlink" href="#">
                    <img class="navicon" src="~/Content/Images/Icons/design.svg" />
                    Design
                </a>
            </li>
        </ul>
    </header>
    <div class="title">
        @ViewBag.Title
    </div>
    <div class="header-image">
    </div>
    <div class="content">
        <p>This is where you can find my custom maps for the video game Quake.</p>
        <div class="projects">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="footer-content">
            Website and content created by Simon "reslario" Kunze
        </div>
    </footer>
</body>
</html>
